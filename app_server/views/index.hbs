<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div id="adbox">
					<img src="images/{{home.image}}" alt="Img">
					<h1>{{home.title}}</h1>
					<p>{{home.description}}</p>
				</div>
				<div id="main">
					<div class="box">
						<div>
							<div>
								<h3>Latest Blog</h3>
								<ul>
									{{#each home.blogs}}
									<li>
										<h4><a href="/news">{{this.title}}</a></h4>
										<span>{{this.date}}</span>
										<p>{{this.preview}}</p>
									</li>
									{{/each}}
								</ul>
							</div>
						</div>
					</div>
					<div id="testimonials" class="box">
						<div>
							<div>
								<h3>Testimonials</h3>
								<p>"{{home.testimonials.review}}" <span>- <a href="/">{{home.testimonials.author}}</a></span></p>
							</div>
						</div>
					</div>
				</div>
				<div id="sidebar">
					<div class="section">
						<a href="/rooms"><img src="images/rooms.png" alt="Img"></a>
					</div>
					<div class="section">
						<a href="/travel"><img src="images/dive-site.png" alt="Img"></a>
					</div>
					<div class="section">
						<a href="/meals"><img src="images/food.png" alt="Img"></a>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>