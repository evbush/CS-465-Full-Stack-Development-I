<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
									{{#each newstip.links}}
									<li>
										<a href="/news">{{this.title}}</a>
									</li>
									{{/each}}
								</ul>
								<h3>Vaction Tips</h3>
								<ul>
									{{#each newstip.tips}}
									<li>
										<a href="/news">{{this.title}}</a>
									</li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								<img src="images/{{newstip.image}}" alt="Img">
								<h2>{{newstip.headline}}</h2>
								<span class="time">{{newstip.date}}<br> by: {{newstip.author}}</span>
								{{{newstip.content}}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>